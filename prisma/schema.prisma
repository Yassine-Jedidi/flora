generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id               String         @id @default(cuid())
  name             String
  description      String
  originalPrice    Decimal  @db.Decimal(10, 3)
  discountedPrice  Decimal?  @db.Decimal(10, 3) // Optional: sale price after discount
  stock            Int            @default(0)
  isFeatured  Boolean        @default(false)
  isArchived  Boolean        @default(false)
  isLive      Boolean        @default(true)
  categoryId  String
  category    Category       @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  
  // Pack Relations
  packItems       PackItem[] @relation("PackToItem")
  includedInPacks PackItem[] @relation("ItemToPack")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orderItems OrderItem[]

  @@index([categoryId])
}

model PackItem {
  id        String  @id @default(cuid())
  packId    String
  pack      Product @relation("PackToItem", fields: [packId], references: [id], onDelete: Cascade)
  itemId    String
  item      Product @relation("ItemToPack", fields: [itemId], references: [id])
  quantity  Int     @default(1)

  @@unique([packId, itemId])
  @@index([packId])
  @@index([itemId])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String   // URL from UploadThing
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

model Order {
  id              String      @id @default(cuid())
  
  // Guest Information
  fullName        String
  phoneNumber     String
  governorate     String
  city            String      // Delegation
  detailedAddress String
  
  // Order details
  items           OrderItem[]
  totalPrice      Decimal     @db.Decimal(10, 3)
  status          OrderStatus @default(PENDING)
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  price     Decimal  @db.Decimal(10, 3) // Price at time of purchase

  @@index([orderId])
  @@index([productId])
}
