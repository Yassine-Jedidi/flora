generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id               String         @id @default(cuid())
  name             String
  description      String
  originalPrice    Decimal  @db.Decimal(10, 3)
  discountedPrice  Decimal?  @db.Decimal(10, 3) // Optional: sale price after discount
  stock            Int            @default(0)
  isFeatured  Boolean        @default(false)
  isArchived  Boolean        @default(false)
  categoryId  String
  category    Category       @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@index([categoryId])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String   // URL from UploadThing
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

model Order {
  id              String      @id @default(cuid())
  productId       String
  product         Product     @relation(fields: [productId], references: [id])
  
  // Guest Information
  fullName        String
  phoneNumber     String
  governorate     String
  city            String      // Delegation
  detailedAddress String
  
  // Order details
  quantity        Int         @default(1)
  totalPrice      Decimal     @db.Decimal(10, 3)
  status          OrderStatus @default(PENDING)
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([productId])
}
